{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "memory",
      "host": {
        "sourcePath": "/dev/shm"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "hub",
      "memory": 128,
      "essential": true,
      "image": "selenium/hub",
      "portMappings": [
        {
          "containerPort": 4444,
          "hostPort": 4444
        }
      ]
    },
    {
      "name": "chrome",
      "memory": 128,
      "essential": true,
      "image": "selenium/node-chrome",
      "mountPoints": [
        {
          "sourceVolume": "memory",
          "containerPath": "/dev/shm"
        }
      ],
      "environment": [
        {
          "name": "HUB_HOST",
          "value": "hub"
        }
      ]
    }
  ]
}
