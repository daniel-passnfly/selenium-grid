{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "memory",
      "host": {
        "sourcePath": "/dev/shm"
      }
    },
    {
      "name": "storage-efs",
      "host": {
        "sourcePath": "/mnt/efs"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "hub",
      "memoryReservation": 128,
      "essential": true,
      "image": "selenium/hub",
      "portMappings": [
        {
          "containerPort": 4444,
          "hostPort": 4444
        }
      ]
    },
    {
      "name": "chrome",
      "memoryReservation": 128,
      "essential": true,
      "image": "selenium/node-chrome",
      "links": [
        "hub"
      ],
      "mountPoints": [
        {
          "sourceVolume": "memory",
          "containerPath": "/dev/shm"
        },
        {
          "sourceVolume": "storage-efs",
          "containerPath": "/var/tmp"
        }
      ],
      "environment": [
        {
          "name": "HUB_HOST",
          "value": "hub"
        }
      ]
    }
  ]
}
